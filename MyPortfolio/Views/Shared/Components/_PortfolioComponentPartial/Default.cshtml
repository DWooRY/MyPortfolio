@model List<MyPortfolio.DAL.Entities.Portfolio>
<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>My Projects</h1>

            <p class="lead"> Mezun oldugumdan beri yaptigim projeler yazisini buraya gir.</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">

            @foreach (var item in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="~/photos/dating-app.jpg" class="thumb-link" title="@item.Title" data-size="500x500">
                                <img src="~/hola-master/images/portfolio/beetle.jpg"
                                     srcset="/hola-master/images/portfolio/beetle.jpg 1x, /hola-master/images/portfolio/beetle@2x.jpg 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>
                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="https://github.com/DWooRY/DatingApp" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>

                    </div> <!-- end item-folio -->
                </div> <!-- end masonry__brick -->
            }



        </div>
    </div> <!-- end masonry -->

</section>